@model IEnumerable<Deerfly_Patches.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<div class="container main-page">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <h3>How Can I Protect Against Deerflies?</h3>
            <p>
                Deerfly Patches are odorless hat strips that stop deerflies from biting!
            </p>
            <ul>
                <li>Prevents biting better than a spray repellent</li>
                <li>Natural, no chemicals</li>
                <li>Safe with children</li>
            </ul>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <img class="image-square-rounded" alt="Deerfly Patches header graphic"
                 src="~/content/images/deerflypatchheader.jpg"
                 srcset="~/content/images/deerflypatchheader.jpg 409w, ~/images/deerflypatchheader-small.jpg 164w" />
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-6">
            <h3>Deerfly Patches are the best deerfly bite prevention!</h3>
        </div>
        <div class="clearfix"></div>
        <hr />

        <div class="product-display">
            <h3 class="text-center">Buy Here</h3>
            @foreach (var item in Model)
            {
                if (item.DisplayOnFrontPage)
                {
                    @Html.Partial("_ProductPartial", item)
                }
            }
        </div>

    </div>
</div>